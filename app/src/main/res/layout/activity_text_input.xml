<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="post"
            type="com.talkingwhale.pojos.Post" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.TextInputActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.TextInputLayout
            visibleGone="@{post == null}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@id/button_text_post_submit">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/post_text_edit_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/enter_text_for_post"
                android:imeOptions="actionDone"
                android:inputType="textCapSentences|textAutoCorrect"
                android:maxLength="80"
                tools:text="text" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_text_post_submit"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            visibleGone="@{post == null}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/post_this"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</layout>