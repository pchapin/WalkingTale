<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.example.github.vo.Status" />

        <import type="com.android.example.github.vo.Resource" />

        <variable
            name="story"
            type="com.android.example.github.vo.Story" />

        <variable
            name="repoResource"
            type="Resource" />

    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:visibleGone="@{story != null}"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="154dp">

                <ImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:adjustViewBounds="false"
                    android:contentDescription="@string/a11y_user_photo"
                    android:cropToPadding="false"
                    android:hapticFeedbackEnabled="false"
                    android:scaleType="centerCrop"
                    app:civ_border_color="#000000"
                    app:civ_border_width="2dp"
                    app:imageUrl="@{story.story_image}"
                    tools:src="@color/alert" />

                <RatingBar
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="#FFD700"
                    android:rating="3.5"
                    android:stepSize="0.5"
                    app:visibleGone="@{story != null}"
                    tools:text="rating" />

                <TextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.AppCompat.Headline"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center_horizontal"
                    android:text="@{story.storyName}"
                    app:visibleGone="@{story != null}"
                    tools:text="name of the story" />

                <TextView
                    android:id="@+id/author"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@{story.username}"
                    android:textSize="24sp"
                    app:visibleGone="@{story != null}"
                    tools:text="author" />

                <TextView
                    android:id="@+id/description"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/open_sans"
                    android:text="@{story.description}"
                    android:textSize="20sp"
                    app:visibleGone="@{story != null}"
                    tools:text="description of the story" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/genre"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@{`Genre: ` + story.genre}"
                        android:textSize="24sp"
                        app:visibleGone="@{story != null}"
                        tools:text="genre" />

                    <TextView
                        android:id="@+id/tags"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/open_sans"
                        android:text="@{`Tags: ` + story.tags}"
                        android:textSize="24sp"
                        app:visibleGone="@{story != null}"
                        tools:text="tags" />

                    <TextView
                        android:id="@+id/duration"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="5dp"
                        android:text="@{`Duration: ` + story.duration}"
                        android:textSize="24sp"
                        app:visibleGone="@{story != null}"
                        tools:text="duration" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <Button
                        android:id="@+id/start_story_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Start Story" />

                    <Button
                        android:id="@+id/story_location_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Story Location" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </android.support.constraint.ConstraintLayout>
</layout>