<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.android.example.github.vo.Status" />

        <import type="com.android.example.github.vo.Resource" />

        <variable
            name="repo"
            type="com.android.example.github.vo.Repo" />

        <variable
            name="contributorsStatus"
            type="com.android.example.github.vo.Status" />

        <variable
            name="retryCallback"
            type="com.android.example.github.ui.common.RetryCallback" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/isPublishSuccessful"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/latitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/longitude_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/last_update_time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/finish_story_inputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/story_name_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Story Name"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences|textAutoCorrect"
                        android:maxLength="50"
                        tools:text="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/story_desc_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Story Description"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences|textAutoCorrect"
                        android:maxLength="280"
                        tools:text="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/story_tags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Story Tags"
                        android:imeOptions="actionNext"
                        android:inputType="textCapSentences|textAutoCorrect"
                        android:maxLength="50"
                        tools:text="text" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/story_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Story Image"
                        android:imeOptions="actionDone"
                        android:inputType="textCapSentences|textAutoCorrect"
                        android:maxLength="50"
                        tools:text="text" />
                </android.support.design.widget.TextInputLayout>

                <Spinner
                    android:id="@+id/genre_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_buttons_create_story"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_chapter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Chapter" />

                <Button
                    android:id="@+id/remove_chapter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remove Chapter" />

                <Button
                    android:id="@+id/finish_story_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Finish" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_buttons_create_exposition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_text_exposition_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text" />

                <Button
                    android:id="@+id/add_picture_exposition_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Picture" />

                <Button
                    android:id="@+id/add_audio_exposition_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Audio" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nav_buttons_radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/radius_increment_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radius +" />

                <Button
                    android:id="@+id/radius_decrement_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radius -" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chapter_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layoutManager="LinearLayoutManager"
                tools:listitem="@layout/chapter_item" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>
