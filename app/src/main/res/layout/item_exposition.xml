<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="exposition"
            type="com.android.example.github.walkingTale.Exposition" />

        <variable
            name="exposition_type"
            type="com.android.example.github.walkingTale.ExpositionType" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="2dp"
        app:cardUseCompatPadding="true">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/play_audio_button"
                visibleGone="@{exposition.type==exposition_type.AUDIO}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play Audio"
                app:audioUrl="@{exposition.content}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/exposition_image"
                visibleGone="@{exposition.type==exposition_type.PICTURE}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/a11y_user_photo"
                android:scaleType="centerCrop"
                app:imageUrl="@{exposition.content}"
                app:layout_constraintStart_toEndOf="@id/play_audio_button"
                app:layout_constraintTop_toTopOf="@id/play_audio_button"
                tools:src="@color/alert" />

            <TextView
                android:id="@+id/exposition_text"
                visibleGone="@{exposition.type==exposition_type.TEXT}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@{exposition.content}"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/lorem_ipsum" />

            <TextView
                android:id="@+id/id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="272dp"
                android:layout_marginTop="8dp"
                android:text="@{`exposition `+(exposition.id + 1)}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginStart="20dp"
                tools:layout_editor_absoluteY="7dp"
                tools:text="exposition id" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>